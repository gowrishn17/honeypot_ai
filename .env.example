# ============================================
# OpenRouter Configuration (FREE models!)
# ============================================
# Get your FREE API key from: https://openrouter.ai/keys

OPENAI_API_KEY=sk-or-v1-your-openrouter-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=google/gemini-2.0-flash-exp:free

# Alternative FREE models:
# LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free
# LLM_MODEL=qwen/qwen-2.5-7b-instruct:free
# LLM_MODEL=google/gemini-flash-1.5:free

LLM_PROVIDER=openai

# Database Configuration
DATABASE_URL=sqlite:///data/honeytokens.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Honeypot Configuration
HONEYPOTS_BASE_DIR=/honeypots
DATA_DIR=/data

# Generation Limits
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_PER_MINUTE=60

# Content Generation Settings
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
REALISM_THRESHOLD=0.7
