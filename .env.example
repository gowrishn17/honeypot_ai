# OpenRouter Configuration (FREE models available!)
# Get your free API key from: https://openrouter.ai/keys
OPENAI_API_KEY=sk-or-v1-your-openrouter-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=meta-llama/llama-4-scout:free

# Alternative FREE models on OpenRouter (January 2026):
# LLM_MODEL=meta-llama/llama-4-maverick:free  # Sparse MoE, 400B parameters, multimodal
# LLM_MODEL=tngtech/deepseek-r1t-chimera:free  # MoE combining DeepSeek-R1 and DeepSeek-V3
# LLM_MODEL=mistralai/devstral-2-2512:free  # Dense transformer, 123B parameters, good for coding
# LLM_MODEL=z-ai/glm-4.5-air:free  # Lightweight agent-centric model

# For direct OpenAI (requires paid credits):
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4-turbo-preview

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Local LLM (Ollama fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LLM Provider Selection (openai, azure, ollama)
LLM_PROVIDER=openai

# Database Configuration
DATABASE_URL=sqlite:///data/honeytokens.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Honeypot Configuration
HONEYPOTS_BASE_DIR=/honeypots
DATA_DIR=/data

# Generation Limits
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_PER_MINUTE=60

# Content Generation Settings
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
REALISM_THRESHOLD=0.7
