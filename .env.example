# OpenRouter Configuration (FREE models available!)
# Get your free API key from: https://openrouter.ai/keys
OPENAI_API_KEY=sk-or-v1-your-openrouter-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Alternative FREE models on OpenRouter:
# LLM_MODEL=google/gemini-2.0-flash-exp:free  # Google's latest Gemini model
# LLM_MODEL=qwen/qwen-2.5-7b-instruct:free  # Alibaba's Qwen model
# LLM_MODEL=google/gemini-flash-1.5:free  # Fast Gemini model
# LLM_MODEL=nousresearch/hermes-3-llama-3.1-405b:free  # Large powerful model
# LLM_MODEL=meta-llama/llama-3.2-1b-instruct:free  # Smaller, faster model

# For direct OpenAI (requires paid credits):
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4-turbo-preview

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Local LLM (Ollama fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LLM Provider Selection (openai, azure, ollama)
LLM_PROVIDER=openai

# Database Configuration
DATABASE_URL=sqlite:///data/honeytokens.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Honeypot Configuration
HONEYPOTS_BASE_DIR=/honeypots
DATA_DIR=/data

# Generation Limits
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_PER_MINUTE=60

# Content Generation Settings
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
REALISM_THRESHOLD=0.7
