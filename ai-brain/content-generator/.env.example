# Application
APP_NAME=AI Content Generator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# LLM Configuration
LLM_PROVIDER=openai  # openai, azure_openai, ollama
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database
DATABASE_URL=sqlite:///./data/honeypot.db
DATABASE_ECHO=false

# Storage
OUTPUT_BASE_PATH=./data/generated
TEMPLATE_PATH=./ai-brain/content-generator/templates

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Security
MAX_FILE_SIZE_MB=10

# Content Generation
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
UNIQUENESS_THRESHOLD=0.8
REALISM_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
