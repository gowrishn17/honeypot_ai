# ============================================
# OpenRouter Configuration (FREE models!)
# ============================================
# Get your FREE API key from: https://openrouter.ai/keys

OPENAI_API_KEY=sk-or-v1-your-openrouter-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=google/gemini-2.0-flash-exp:free

# Alternative FREE models on OpenRouter:
# LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free
# LLM_MODEL=qwen/qwen-2.5-7b-instruct:free
# LLM_MODEL=google/gemini-flash-1.5:free
# LLM_MODEL=nousresearch/hermes-3-llama-3.1-405b:free

# LLM Provider (keep as 'openai' for OpenRouter)
LLM_PROVIDER=openai

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

# Application
APP_NAME=AI Content Generator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database
DATABASE_URL=sqlite:///./data/honeypot.db
DATABASE_ECHO=false

# Storage
OUTPUT_BASE_PATH=./data/generated
TEMPLATE_PATH=./ai-brain/content-generator/templates

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Security
MAX_FILE_SIZE_MB=10

# Content Generation
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
UNIQUENESS_THRESHOLD=0.8
REALISM_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
